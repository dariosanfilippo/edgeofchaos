// SR-INDEPENDENT DELAYS

de = library("delays.lib");
d2 = library("delays2.lib");
ma = library("maths.lib");
m2 = library("maths2.lib");

// integer delay
del_int(in, del, size) = in : de.delay(s, del*ma.SR)
with {
      s = size*ma.SR : m2.round_pow2;
};

// linear interpolation between samples
del_lin(in, del, size) = in : de.fdelay(size*ma.SR, del*ma.SR);

// polynomial interpolation
del_pol(in, del, size) = de.fdelayltv(6, s, d, in)
with {
      s = size*ma.SR : m2.round_pow2;
      d = del*ma.SR : max((6-1)/2, _);
};

// linear interpolation between two delay lines
del_smo(in, del, size, itime) = in : de.sdelay(s, it, d)
with {
      s = size*ma.SR : m2.round_pow2;
      it = itime*ma.SR;
      d = del*ma.SR;
};


