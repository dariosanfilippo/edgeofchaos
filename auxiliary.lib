au = library("auxiliary.lib");

// full-amp 1-sample impulse
dirac = 1-1';

// signal inspector
inspect(i, lower, upper) = _ <: attach(_ , 
                                       _ : vbargraph("sig_%i [style:numerical]", lower, upper));

// full-amp n-sample step function
step(n) = 1 <:  _ ,
                @(n) : -;


